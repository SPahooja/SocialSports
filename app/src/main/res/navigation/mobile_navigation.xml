<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.uwcs446.socialsports.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_find"
        android:name="com.uwcs446.socialsports.ui.find.FindFragment"
        android:label="@string/top_label_find"
        tools:layout="@layout/fragment_find">
        <action
            android:id="@+id/action_navigation_find_to_match_details"
            app:destination="@id/match_details" />
    </fragment>

    <fragment
        android:id="@+id/match_details"
        android:name="com.uwcs446.socialsports.ui.matchdetails.MatchDetailsFragment"
        tools:layout="@layout/fragment_match_details" >
        <argument
            android:name="matchId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_host"
        android:name="com.uwcs446.socialsports.ui.host.location.HostLocationFragment"
        android:label="@string/title_host"
        tools:layout="@layout/fragment_host_location" >
        <action
            android:id="@+id/action_navigation_host_to_host_edit_details"
            app:destination="@id/host_edit_details" />
    </fragment>

    <fragment
        android:id="@+id/host_edit_details"
        android:name="com.uwcs446.socialsports.ui.host.details.HostDetailsFragment"
        android:label="@string/title_host"
        tools:layout="@layout/fragment_host_edit_details" >
        <argument
            android:name="matchLocation"
            app:argType="com.uwcs446.socialsports.domain.match.MatchLocation"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="matchId"
            app:argType="string"
            android:defaultValue="@null"
            app:nullable="true" />
        <action
            android:id="@+id/action_host_edit_details_to_navigation_host"
            app:destination="@id/navigation_host" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.uwcs446.socialsports.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <action android:id="@+id/action_global_to_match_details" app:destination="@id/match_details"/>
</navigation>