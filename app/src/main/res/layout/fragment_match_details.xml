<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.matchdetails.MatchDetailsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            tools:context=".ui.matchdetails.MatchDetailsFragment">


            <ProgressBar
                android:id="@+id/match_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.Group
                android:id="@+id/match_details_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:constraint_referenced_ids="match_summary, match_location, match_description,
                match_host_icon, match_host_label, match_host_name, edit_button_match_details,
                team_linear_layout"
                />

            <include
                layout="@layout/match_item_card"
                android:id="@+id/match_summary"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                app:layout_constraintStart_toStartOf="parent"
                />


            <include
                layout="@layout/location_item"
                android:id="@+id/match_location"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/match_summary" />

            <TextView
                android:id="@+id/match_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Some notes from the host about the game"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintStart_toStartOf="@+id/match_summary"
                app:layout_constraintTop_toBottomOf="@+id/match_location" />

            <ImageView
                android:id="@+id/match_host_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/match_summary"
                app:layout_constraintTop_toBottomOf="@+id/match_host_label"
                app:srcCompat="@drawable/ic_baseline_account_circle_50"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/match_host_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Host"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/match_summary"
                app:layout_constraintTop_toBottomOf="@+id/match_description" />

            <TextView
                android:id="@+id/match_host_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Smith"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintStart_toEndOf="@+id/match_host_icon"
                app:layout_constraintTop_toTopOf="@+id/match_host_icon" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/edit_button_match_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:visibility="gone"
                android:translationZ="90dp"
                app:layout_constraintTop_toTopOf="@+id/match_summary"
                app:layout_constraintEnd_toEndOf="parent"
                app:fabSize="mini"
                android:backgroundTint="@color/grey"
                app:srcCompat="@drawable/ic_baseline_edit_24dp"/>

            <!-- team lists -->
            <LinearLayout
                android:id="@+id/team_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="@+id/match_host_icon"
                app:layout_constraintTop_toBottomOf="@+id/match_host_icon">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/match_team_one_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_one"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                    <include
                        android:id="@+id/layout_team_one"
                        layout="@layout/team_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/match_team_two_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/team_two"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                    <include
                        android:id="@+id/layout_team_two"
                        layout="@layout/team_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</FrameLayout>