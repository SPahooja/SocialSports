<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp">

    <ImageView
        android:id="@+id/ic_team_player"
        android:layout_width="@dimen/list_icon"
        android:layout_height="@dimen/list_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_person_add_24px" />

    <TextView
        android:id="@+id/text_player_identifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Join"
        app:layout_constraintBottom_toBottomOf="@+id/ic_team_player"
        app:layout_constraintStart_toEndOf="@+id/ic_team_player"
        app:layout_constraintTop_toTopOf="@+id/ic_team_player"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"/>
</androidx.constraintlayout.widget.ConstraintLayout>